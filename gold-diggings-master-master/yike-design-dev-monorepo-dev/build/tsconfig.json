{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "Node16",
    "target": "ES2015",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"],
    "paths": {
      "utils": ["./utils"],
      "scripts": ["./scripts"]
    }
  },
  "include": ["./"]
}
