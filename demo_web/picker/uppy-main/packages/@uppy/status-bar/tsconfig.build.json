{
  "extends": "../../../tsconfig.shared",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@uppy/core": ["../core/src/index.js"],
      "@uppy/core/lib/*": ["../core/src/*"],
      "@uppy/utils/lib/*": ["../utils/src/*"]
    }
  },
  "include": ["./src/**/*.*"],
  "exclude": ["./src/**/*.test.ts"],
  "references": [
    {
      "path": "../utils/tsconfig.build.json"
    },
    {
      "path": "../core/tsconfig.build.json"
    }
  ]
}
